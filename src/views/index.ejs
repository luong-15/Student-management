<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>Student Management Dashboard</title>
</head>
<body>
    <div class="min-h-screen bg-gray-100 text-gray-800 p-6">
        <div class="max-w-7xl mx-auto">
            <!-- Header section -->
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-4xl font-bold">Student Management Dashboard</h1>
                <div class="flex items-center space-x-4">
                    <span>Welcome, <%= user.username %></span>
                    <a href="/auth/logout" 
                       class="bg-red-500 text-white hover:bg-red-600 px-4 py-2 rounded-lg">
                        Logout
                    </a>
                </div>
            </div>

            <!-- Search and Add Student -->
            <div class="flex justify-between items-center mb-6">
                <div class="flex space-x-4 w-1/2">
                    <input type="text" 
                           placeholder="Tìm kiếm sinh viên..." 
                           class="w-full px-4 py-2 rounded-lg border focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <button class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">
                    Thêm Sinh Viên Mới
                </button>
            </div>

            <!-- Table section -->
            <div class="overflow-x-auto rounded-lg shadow-lg">
                <table class="min-w-full bg-white text-gray-800">
                    <thead>
                        <tr class="bg-gray-200">
                            <th class="p-4 text-left">ID</th>
                            <th class="p-4 text-left">Avatar</th>
                            <th class="p-4 text-left">Họ Tên</th>
                            <th class="p-4 text-left">Lớp</th>
                            <th class="p-4 text-left">Khóa Học</th>
                            <th class="p-4 text-left">Môn Học</th>
                            <th class="p-4 text-left">Điểm TB</th>
                            <th class="p-4 text-left">Học Phí</th>
                            <th class="p-4 text-left">Trạng Thái</th>
                            <th class="p-4 text-left">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% students.forEach(function(student) { %>
                            <tr class="border-b border-gray-200 hover:bg-gray-100">
                                <td class="p-4"><%= student.id %></td>
                                <td class="p-4">
                                    <img src="<%= student.avatar || '/images/default-avatar.png' %>" 
                                         alt="Avatar"
                                         class="w-10 h-10 rounded-full object-cover">
                                </td>
                                <td class="p-4"><%= student.name %></td>
                                <td class="p-4"><%= student.class %></td>
                                <td class="p-4"><%= student.course %></td>
                                <td class="p-4">
                                    <div class="max-w-xs truncate" title="<%= student.subjects %>">
                                        <%= student.subjects %>
                                    </div>
                                </td>
                                <td class="p-4"><%= student.scores.average %></td>
                                <td class="p-4"><%= student.tuition %> VND</td>
                                <td class="p-4">
                                    <span class="px-2 py-1 rounded-full text-sm
                                        <%= student.payment_status === 'Paid' ? 'bg-green-100 text-green-800' : 
                                            student.payment_status === 'Pending' ? 'bg-yellow-100 text-yellow-800' : 
                                            'bg-red-100 text-red-800' %>">
                                        <%= student.payment_status %>
                                    </span>
                                </td>
                                <td class="p-4">
                                    <div class="flex space-x-2">
                                        <a href="/students/<%= student.id %>" 
                                           class="text-blue-500 hover:text-blue-700">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button class="text-green-500 hover:text-green-700">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="text-red-500 hover:text-red-700">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="mt-6 flex justify-between items-center">
                <span class="text-gray-600">
                    Hiển thị <%= students.length %> sinh viên
                </span>
                <div class="flex space-x-2">
                    <button class="px-4 py-2 bg-gray-200 rounded-lg hover:bg-gray-300">
                        Trước
                    </button>
                    <button class="px-4 py-2 bg-gray-200 rounded-lg hover:bg-gray-300">
                        Sau
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</body>
</html>